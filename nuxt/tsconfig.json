{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "paths": {
      "*": [ "./*" ],
      "@hlmpn/vite-plugin-iconify": [ "../" ],
    },
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "esModuleInterop": true,
    "allowArbitraryExtensions": true,
    "isolatedModules": true,
    "removeComments": true,

    "resolveJsonModule": true,
    "types": [ "node", "vite/client", "@nuxt/schema" ],
    "allowJs": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

  },
  "include": [
    "src/**/*.ts",
    "src/module.ts",
  ]
}
